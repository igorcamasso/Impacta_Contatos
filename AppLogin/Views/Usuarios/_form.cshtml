@model Usuario
@using AppLogin.ENums

<div class="mb-3">
	<label for="nome">Nome</label>
	<input type="text" asp-for="UsuarioNome" class="form-control" placeholder="Digite o nome">
	@Html.ValidationMessageFor(x =>x.UsuarioNome)</
</div>

<div class="mb-3">
	<label for="email">Email </label>
	<input type="text" asp-for="Email" class="form-control" placeholder="Digite o email" />
	@Html.ValidationMessageFor(x =>x.Email)</
</div>

<div class="mb-3">
	<label for="nome">Login</label>
	<input type="text" asp-for="Login" class="form-control" placeholder="Digite o login">
	@Html.ValidationMessageFor(x =>x.Login)</
</div>

<div class="mb-3">
	<label for="celular">Senha</label>
	<input type="password" asp-for="Senha" class="form-control" placeholder="Digite a senha">
	@Html.ValidationMessageFor(x =>x.Senha)</
</div>

<div class="mb-3">
	<label for="celular">Perfil</label>
	<select type="text" asp-for="Perfil" class="form-control" placeholder="Escolha o perfil">
		<option value="@EPerfil.Admin">Administrador</option>
		<option value="@EPerfil.Padrao">Padrão</option>
	</select>
	@Html.ValidationMessageFor(x =>x.Perfil)</
</div>
